<h1> <%= @episode.title %> </h1>
<% if @episode.rating %>
  <h4>Rated <%= @episode.rating.round(1) %> of 5 stars</h4>
<% else %>
  <h4>This episode has not been rated. Be the first to <%= link_to "write a review.", new_episode_review_path(@episode) %> </h4>
<% end %>
<hr>
<h3> Season <%= @episode.season %>, Episode <%= @episode.number %> </h3>


<p> <%= @episode.description %> </p>

<h4> <%= link_to "Scenes from this Episode", episode_scenes_path(@episode) %> </h4>
<h4> <%= link_to "Reviews of this Episode", episode_reviews_path(@episode) %> </h4>

<hr>
<% if current_user && current_user.admin %>
  <p>
    <%= link_to "Edit", edit_episode_path(@episode) %> |
    <%= link_to "Delete", episode_path(@episode), data: {
      confirm: "This will delete all content for this episode. Are you sure?",
      method: "delete"
    } %>
  </p>
<% end %>
